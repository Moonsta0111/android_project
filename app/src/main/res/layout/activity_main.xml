<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 사용자 정보 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/userRoleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="?android:textColorSecondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 관리자용 메뉴 -->
            <LinearLayout
                android:id="@+id/ownerMenuLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="직원 관리"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/addWorkerButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="알바생 추가"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        <Button
                            android:id="@+id/manageWorkersButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="알바생 목록"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="근무 관리"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/addShiftButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="근무 일정 입력"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        <Button
                            android:id="@+id/viewShiftsButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="근무 일정 조회"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="급여 관리"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/calculatePayrollButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="급여 계산"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        <Button
                            android:id="@+id/viewPayrollsButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="급여 내역 조회"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ownerCalendarViewButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="근무 일정 캘린더"
                    app:icon="@android:drawable/ic_menu_my_calendar"/>

            </LinearLayout>

            <!-- 알바생용 메뉴 -->
            <LinearLayout
                android:id="@+id/workerMenuLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="근무 정보"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/viewMyShiftsButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="내 근무 일정"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        <Button
                            android:id="@+id/viewMyPayrollButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="내 급여 내역"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/workerCalendarViewButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="근무 일정 캘린더"
                    app:icon="@android:drawable/ic_menu_my_calendar"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>